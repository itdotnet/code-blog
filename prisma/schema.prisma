model BlogImage {
  id     Int    @id @default(autoincrement())
  url    String
  blogId Int
  blog   Blog   @relation(fields: [blogId], references: [id])
}

model BlogType {
  id    Int    @id @default(autoincrement())
  value String
  Blog  Blog[]
}
